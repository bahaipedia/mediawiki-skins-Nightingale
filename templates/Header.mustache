<header class="mw-header nightingale-header">
    {{>Logo}}
    {{>Sitename}}

    <nav class="nightingale-nav">
        {{#nightingale-header-portlets}}
            <div class="mw-portlet mw-portlet-dropdown">
                <input type="checkbox" id="cb-nav-{{id}}" class="mw-checkbox-hack-checkbox">
                <label for="cb-nav-{{id}}" class="mw-checkbox-hack-button">{{label}} â–¾</label>
                <div class="mw-portlet-body">
                    <ul>
                        {{#array-items}}{{>ListItem}}{{/array-items}}
                    </ul>
                </div>
            </div>
        {{/nightingale-header-portlets}}
    </nav>

    {{>Search}}

    <div class="nightingale-header-tools">
        <div class="nightingale-icon-menus">
            {{>ContentEdit}}
            {{>ContentTalk}}
            {{>Notifications}}
            <div class="nightingale-menu-wrapper">
                {{>Dropdown}}{{>ContentHybrid}}
            </div>
            <div class="nightingale-menu-wrapper nightingale-personal-wrapper">
                {{>Dropdown}}{{>PersonalMenu}}
            </div>
        </div>
    </div>
</header>
