{{! Iterate through all list items in the 'views' portlet. }}
{{#data-portlets.data-views.array-items}}
    {{! Within each item, loop through its links. }}
    {{#array-links}}
        {{! Check for the 'talk' flag on the link object. }}
        {{#is-ca-talk}}
            {{! Also check that the link is not for a new (non-existent) page. }}
            {{^is-new}}
                <a class="header-button header-button--talk" {{#array-attributes}}{{key}}="{{value}}"{{/array-attributes}}>{{text}}</a>
            {{/is-new}}
        {{/is-ca-talk}}
    {{/array-links}}
{{/data-portlets.data-views.array-items}}
